<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.cat201app.LibraryController" stylesheets="@library.css" spacing="20" alignment="TOP_CENTER">

    <!-- Input Fields for Book Details -->
    <HBox spacing="15" alignment="CENTER">
        <TextField fx:id="titleField" promptText="Book Title" />
        <TextField fx:id="authorField" promptText="Author Name" />
        <TextField fx:id="isbnField" promptText="ISBN Number" />
        <Button text="Add Book" onAction="#onAddBook" />
        <Button text="Search Books" onAction="#onSearchBook" />
    </HBox>

    <!-- Book Table -->
    <TableView fx:id="bookTable" VBox.vgrow="ALWAYS" prefWidth="Infinity">
        <columns>
            <TableColumn fx:id="indexColumn" text="Index" minWidth="50" />
            <TableColumn fx:id="titleColumn" text="Title" minWidth="150" />
            <TableColumn fx:id="authorColumn" text="Author" minWidth="150" />
            <TableColumn fx:id="isbnColumn" text="ISBN" minWidth="100" />
            <TableColumn fx:id="availabilityColumn" text="Availability" minWidth="100" />
            <TableColumn fx:id="borrowerColumn" text="Borrower" minWidth="150" />
        </columns>
        <!-- Set column resize policy to fill the table width -->
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Display All Books" onAction="#onDisplayAllBooks" />
        <Button text="Display Borrowed Books" onAction="#onDisplayBorrowedBooks" />
        <Button text="Save Books" onAction="#onSaveBooks" />
        <Button text="Delete Book" onAction="#onDeleteBook" />
        <Button text="Borrow Book" onAction="#onBorrowBook" />
        <Button text="Return Book" onAction="#onReturnBook" />
    </HBox>
</VBox>
